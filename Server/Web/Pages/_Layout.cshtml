<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 皓石传奇三管理后台</title>
    <!-- Bootstrap CSS (本地资源) -->
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <!-- 自定义样式 -->
    <link href="/css/admin.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-brand">
                <div class="d-flex align-items-center">
                    <i class="bi bi-shield-lock-fill me-2"></i>
                    <div>
                        <h5 class="mb-0">皓石传奇三</h5>
                        <small>管理后台</small>
                    </div>
                </div>
            </div>
            <ul class="nav flex-column mt-3">
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")" href="/Dashboard" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="仪表盘">
                        <i class="bi bi-speedometer2"></i>
                        <span>仪表盘</span>
                    </a>
                </li>

                <li class="nav-section">玩家管理</li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Players" ? "active" : "")" href="/Players" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="在线玩家">
                        <i class="bi bi-people"></i>
                        <span>在线玩家</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Accounts" ? "active" : "")" href="/Accounts" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="账户管理">
                        <i class="bi bi-person-badge"></i>
                        <span>账户管理</span>
                    </a>
                </li>

                <li class="nav-section">游戏管理</li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Items" ? "active" : "")" href="/Items" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="物品管理">
                        <i class="bi bi-box-seam"></i>
                        <span>物品管理</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Maps" ? "active" : "")" href="/Maps" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="地图管理">
                        <i class="bi bi-map"></i>
                        <span>地图管理</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Monsters" ? "active" : "")" href="/Monsters" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="怪物管理">
                        <i class="bi bi-bug"></i>
                        <span>怪物管理</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Npcs" ? "active" : "")" href="/Npcs" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="NPC管理">
                        <i class="bi bi-person-standing"></i>
                        <span>NPC管理</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Skills" ? "active" : "")" href="/Skills" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="技能管理">
                        <i class="bi bi-lightning"></i>
                        <span>技能管理</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Classes" ? "active" : "")" href="/Classes" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="职业管理">
                        <i class="bi bi-person-badge"></i>
                        <span>职业管理</span>
                    </a>
                </li>

                <li class="nav-section">系统</li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "System" ? "active" : "")" href="/System" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="系统管理">
                        <i class="bi bi-gear"></i>
                        <span>系统管理</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Settings" ? "active" : "")" href="/Settings" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="配置管理">
                        <i class="bi bi-sliders"></i>
                        <span>配置管理</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <div class="top-navbar d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                </div>
                <div class="d-flex align-items-center">
                    <!-- 主题切换按钮 -->
                    <button class="theme-toggle me-3" type="button" id="themeToggle" title="切换主题" aria-label="切换主题">
                        <i class="bi bi-moon-fill theme-icon-moon"></i>
                        <i class="bi bi-sun-fill theme-icon-sun"></i>
                    </button>
                    <span class="me-3 text-muted-custom">
                        <i class="bi bi-person-circle me-1"></i>@User.Identity?.Name
                    </span>
                    <a href="/Logout" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-box-arrow-right"></i> 退出
                    </a>
                </div>
            </div>
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <!-- Bootstrap JS (本地资源) -->
    <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- 主题切换控制器 -->
    <script src="/js/theme-switcher.js"></script>
    <!-- 侧边栏控制器 -->
    <script src="/js/admin-sidebar.js"></script>
    <!-- AJAX 通用函数 -->
    <script src="/js/admin-ajax.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
