@page
@model LoginModel
@{
    ViewData["Title"] = "登录";
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>登录 - 皓石传奇三管理后台</title>
    <!-- Bootstrap CSS (本地资源) -->
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <!-- 自定义样式 -->
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body class="login-page">
    <div class="login-card">
        <div class="login-header">
            <i class="bi bi-shield-lock-fill mb-3 d-block" style="font-size: 2.5rem; color: var(--color-accent);"></i>
            <h3>皓石传奇三</h3>
            <p>管理后台</p>
        </div>
        <div class="login-body">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            <form method="post">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" name="Email" placeholder="name@example.com" required />
                    <label for="email"><i class="bi bi-envelope me-2"></i>账户邮箱</label>
                </div>
                <div class="form-floating mb-4">
                    <input type="password" class="form-control" id="password" name="Password" placeholder="密码" required />
                    <label for="password"><i class="bi bi-lock me-2"></i>密码</label>
                </div>
                <button type="submit" class="btn btn-primary btn-login w-100">
                    <i class="bi bi-box-arrow-in-right me-2"></i>登 录
                </button>
            </form>

            @if (Model.ShowCreateSuperAdmin)
            {
                <div class="mt-4 pt-4" style="border-top: 1px solid var(--color-border);">
                    <form method="post" asp-page-handler="CreateSuperAdmin">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-outline-success">
                                <i class="bi bi-shield-plus me-2"></i>开启默认超管账号
                            </button>
                        </div>
                        <div class="text-center mt-3" style="color: var(--color-text-muted); font-size: 0.85rem;">
                            账号: <code style="background: var(--color-bg-dark); border: 1px solid var(--color-border);">@Model.DefaultSuperAdminEmail</code>
                            ，密码: <code style="background: var(--color-bg-dark); border: 1px solid var(--color-border);">123456</code>
                        </div>
                    </form>
                </div>
            }

            <div class="text-center mt-4" style="color: var(--color-text-muted); font-size: 0.85rem;">
                <i class="bi bi-shield-check me-1"></i>仅限 GM 及以上权限账户登录
            </div>
        </div>
    </div>
    <!-- Bootstrap JS (本地资源) -->
    <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
